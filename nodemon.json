{
  "verbose": false,
  "debug": false,
  "exec": "ts-node -r tsconfig-paths/register ./koa/main.ts",
  "ignore": [
    "mochawesome-report",
    "node_modules",
    "./test",
    "**/*.d.ts",
    "*.test.ts",
    "*.spec.ts",
    "fixtures/*",
    "test/**/*",
    "docs/*"
  ],
  "events": {
    "restart": ""
  },
  "watch": [
    "./koa",
    "./koa/configs",
    "./koa/main.ts"
  ],
  "ext": "ts",
  "inspect": true
}